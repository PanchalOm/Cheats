pipeline{
  agent any
  environment {
  PATH = "/opt/apache-maven-3.6.3/bin:$PATH"
  }
  tools { 
        maven 'apache-maven-3.6.3' 
        }
  stages{
    stage('Build'){
      steps{
        sh "mvn clean install"
        }
        }
    stage('SonarQube analysis'){
      steps{
        withSonarQubeEnv('sonarqube'){
          sh "mvn sonar:sonar"
          }
          }
          }
          }        
          }
      
